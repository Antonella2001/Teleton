@model Dominio.EntidadesDeNegocio.AlcanciaSolicitud

@{
    ViewData["Title"] = "Contabilizar";
}

<div class="row justify-content-center align-items-center">
    <div class="col-md-4 border">
        <h3 class="text-center">Alcancía: Ingresar Monto</h3>


        @if (TempData["Status"] != null)
        {

            if ((bool)TempData["Status"] == true)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
            else if ((bool)TempData["Status"] == false)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
        }
        <hr />
        <form asp-action="Contabilizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Código Alcancía:</label>
                <input asp-for="IdAlcancia" class="form-control" min="0" autofocus value="0" placeholder="Escanée la alcancía (o ingrese solo números)" type="number" pattern="^[0-9]{0,12}([,][0-9]{2,2})?$" />
                <span asp-validation-for="IdAlcancia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Monto Pesos:</label>
                <input type="number" min="0" asp-for="MontoPesos" class="form-control" value="0" />
                <span asp-validation-for="MontoPesos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Monto Dolares:</label>
                <input type="number" min="0" asp-for="MontoDolares" class="form-control" value="0" />
                <span asp-validation-for="MontoDolares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Recibo:</label>
                <input type="number" min="0" asp-for="NumeroTicket" class="form-control" value="0" />
                <span asp-validation-for="NumeroTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
