@model TeletonMVC.Models.AlcExternaModel

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-items-center">
    <div class="col-md-4 border">
        <h4>Devolución Alcancía Externa</h4>
        @if (TempData["Status"] != null)
        {

            if ((bool)TempData["Status"] == true)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
            else if ((bool)TempData["Status"] == false)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
        }
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nombre:</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ej: Pablo Rodriguez..." maxlength="30" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Teléfono:</label>
                <input asp-for="Telefono" class="form-control" placeholder="Ej: 095670934" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad:</label>
                <input type="number" min="1" asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-danger" />
            </div>

            @if (ViewBag.Rol == "Administrador" || ViewBag.Rol == "Voluntariado" || ViewBag.Rol == "Contabilidad")
            {
                <div class="align-content-end text-right">
                    <a asp-action="Index" class="text-danger">Volver al listado</a>
                </div>

            }
        </form>
    </div>
</div>

