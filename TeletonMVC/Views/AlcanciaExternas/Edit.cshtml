@model Dominio.EntidadesDeNegocio.AlcanciaExterna

@{
    ViewData["Title"] = "Edit";
}


<div class="row justify-content-center align-items-center ">
    <div class="col-md-4 border" style="background-color: #454d55; padding: 10px">
        <h4 class="text-center text-danger">Alcancía Externa: Editar</h4>
        @if (TempData["Status"] != null)
        {

            if ((bool)TempData["Status"] == true)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
            else if ((bool)TempData["Status"] == false)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
        }
        <hr style="border-top: 1px solid white;" />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAlcExt" />
            <div class="form-group">
                <label asp-for="CampaniaId" class="control-label text-white">Campaña: </label>
                <input asp-for="CampaniaId" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label text-white">Nombre: </label>
                <input asp-for="Nombre" class="form-control" disabled />

            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label text-white">Teléfono: </label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDevolucion" class="control-label text-white">Fecha: </label>
                <input asp-for="FechaDevolucion" class="form-control" disabled />

            </div>
            <div class="form-group">
                <label asp-for="MontoPesos" class="control-label text-white">Monto Pesos:</label>
                <input type="number" min="0" asp-for="MontoPesos" value="0" class="form-control" />
                <span asp-validation-for="MontoPesos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoDolares" class="control-label text-white">Monto Dolares: </label>
                <input type="number" min="0" asp-for="MontoDolares" value="0" class="form-control" />
                <span asp-validation-for="MontoDolares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroTicket" class="control-label text-white">Recibo: </label>
                <input type="number" min="0" asp-for="NumeroTicket" value="0" class="form-control" />
                <span asp-validation-for="NumeroTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Impreso" class="control-label text-white">Imprimir:</label>
                <input asp-for="Impreso" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label class="control-label text-white">Si desea cambiarlo</label><br />
                <select name="SelImp" class="form-control">
                    <option disabled selected="selected" value="0">Seleccione una opción...</option>
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-danger" />
            </div>
        </form>
        <div class="align-content-end text-right">
            <a asp-action="Index" class="text-danger">Volver al Listado</a>
        </div>
    </div>
</div>



