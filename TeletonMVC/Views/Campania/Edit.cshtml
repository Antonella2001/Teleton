@model Dominio.Campania

@{
    ViewData["Title"] = "Edit";
}

@if (TempData["Status"] != null)
{
    if ((bool)TempData["Status"] == true)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Mensaje"].ToString()
        </div>
    }
    else if ((bool)TempData["Status"] == false)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Mensaje"].ToString()
        </div>
    }
}


<div class="row justify-content-center align-items-center ">
    <div class="col-md-4 border" style="background-color: #454d55; padding: 10px">
        <h4 class="text-center text-danger">Campaña: Editar</h4>
        <hr style="border-top: 1px solid white;" />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCampania" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label text-white">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label text-white">Fecha Inicio</label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinMVD" class="control-label text-white">Fecha Fin Montevideo</label>
                <input asp-for="FechaFinMVD" class="form-control" />
                <span asp-validation-for="FechaFinMVD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinFB" class="control-label text-white">Fecha Fin Fray Bentos</label>
                <input asp-for="FechaFinFB" class="form-control" />
                <span asp-validation-for="FechaFinFB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-danger" />
            </div>
        </form>
        <div class="align-content-end text-right">
            <a asp-action="ListadoCampanias" class="text-danger">Volver al listado</a>
        </div>
    </div>
</div>


