@model IEnumerable<Dominio.Campania>

@{
    ViewData["Title"] = "ListadoCampanias";
}

<h1 class="text-center">Listado de Campañas</h1>

<p class="align-content-end text-right">
    <a asp-action="AltaCampania">Crear Nuevo</a>
</p>
@if (TempData["Status"] != null)
{

    if ((bool)TempData["Status"] == true)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Mensaje"].ToString()
        </div>
    }
    else if ((bool)TempData["Status"] == false)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Mensaje"].ToString()
        </div>
    }
}

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="text-white">
                Fecha Inicio
            </th>
            <th class="text-white">
                Fecha Fin Montevideo
            </th>
            <th class="text-white">
                Fecha Fin Fray Bentos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ValueFor(modelItem => item.FechaInicio, "{0:dd/MM/yyyy}")
                </td>
                <td>
                    @Html.ValueFor(modelItem => item.FechaFinMVD, "{0:dd/MM/yyyy}")
                </td>
                <td>
                    @Html.ValueFor(modelItem => item.FechaFinFB, "{0:dd/MM/yyyy}")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCampania" class="text-danger">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
