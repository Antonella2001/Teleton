@model IEnumerable<Dominio.Comentario>

@{
    ViewData["Title"] = "Comentarios";
}

<h1 class="text-center">Listado de Comentarios</h1>

<p class="align-content-end text-right">
    <a asp-action="Create">Agregar Comentario</a>
</p>
    @if (TempData["Status"] != null)
    { 
    if ((bool)TempData["Status"] == true)
    {
            <div class="alert alert-success" role="alert">
                @TempData["Mensaje"].ToString()
            </div>
        }
        else if ((bool)TempData["Status"] == false)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Mensaje"].ToString()
            </div>
        }
    }
<div class="table-responsive">


    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th class="text-white">
                    Comentario
                </th>
                <th class="text-white"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ValueFor(modelItem => item.Fecha, "{0:dd/MM/yyyy}")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TextoComentario)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.IdComentario" onclick="return confirm('Desea eliminar el comentario?')"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
