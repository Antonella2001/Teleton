@model Dominio.Comentario

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-items-center ">
    <div class="col-md-4 border">
        <h3 class="text-center">Comentario: Crear</h3>

        @if (TempData["Status"] != null)
        {
            if ((bool)TempData["Status"] == true)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
            else if ((bool)TempData["Status"] == false)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
        }
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Comentario</label>
                <input asp-for="TextoComentario" class="form-control" autofocus/>
                <span asp-validation-for="TextoComentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

