@model Dominio.Comentario

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>
@if (ViewBag.Status != null)
{

    if (ViewBag.Status == true)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Mensaje
        </div>
    }
    else if (ViewBag.Status == false)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Mensaje
        </div>
    }
}
<h3>Estas seguro que desea eliminarlo?</h3>
<div>
    <h4>Comentario</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TextoComentario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TextoComentario)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdComentario" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
