@model Dominio.Responsable

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-items-center ">
    <div class="col-md-4 border" style="background-color: #454d55; padding: 10px">
        <h4 class="text-center text-danger" >Responsable: Editar</h4>

        @if (TempData["Status"] != null)
        {

            if ((bool)TempData["Status"] == true)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Mensaje"]
                </div>
            }
            else if (ViewBag.Status == false)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Mensaje"]
                </div>
            }
        }
        <hr style="border-top: 1px solid white;" />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label text-white"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label text-white"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label text-white"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label text-white"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label text-white">
                    <input class="form-check-input" asp-for="Retira" /> @Html.DisplayNameFor(model => model.Retira)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-danger" />
            </div>
        </form>
        <div class="align-content-end text-right">
            <a asp-action="MostrarTodosResponsables" class="text-danger">Volver al listado</a>
        </div>
    </div>
</div>



