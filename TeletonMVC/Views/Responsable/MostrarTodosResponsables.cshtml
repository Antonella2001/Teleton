@model IEnumerable<Dominio.Responsable>

@{
    ViewData["Title"] = "MostrarTodosResponsables";
}


<h1 class="text-center">Listado de Responsables</h1>

<p class="align-content-end text-right">
    <a asp-action="AltaResponsablePaso">Crear Nuevo</a>
</p>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Retira)
            </th>
            <th class="text-white"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Retira)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a> |

                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-info"></i></a> |

                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Eliminar Responsable @item.Nombre ?')"><i class="fa-solid fa-trash-can"></i></a> 

                </td>
            </tr>
        }
    </tbody>
</table>
