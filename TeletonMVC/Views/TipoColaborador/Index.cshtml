@model IEnumerable<Dominio.TipoColaborador>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Listado Tipo Donadores</h1>
@if (ViewBag.Status != null)
{
    if (ViewBag.Status == true && ViewBag.Mensaje != null)
    {
        <div class="alert alert-dismissible fade show alert-success" role="alert">
            @ViewBag.Mensaje @if (@ViewBag.TipoColId != null && @ViewBag.TipoColId != 0)
            {<a asp-action="Details" asp-controller="TipoColaborador" asp-route-Id="@ViewBag.TipoColId" target="_blank ">Detalle</a>}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    else if (ViewBag.Status == false && ViewBag.Mensaje != null)
    {
        <div class="alert alert-dismissible fade show alert-danger" role="alert">
            @ViewBag.Mensaje
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}

<p class="align-content-end text-right" >
    <a asp-action="Create">Crear</a>
</p>
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th class="text-white ">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="text-white">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-info"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Eliminar Tipo de Donador @item.Nombre ?')"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
