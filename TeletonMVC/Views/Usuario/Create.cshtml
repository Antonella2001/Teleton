@model Dominio.Usuario

@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center align-items-center ">
    <div class="col-md-4 border">
        <h3 class="text-center">Crear Usuario</h3>

        @if (TempData["Status"] != null)
        {

            if ((bool)TempData["Status"] == true)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
            else if ((bool)TempData["Status"] == false)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Mensaje"].ToString()
                </div>
            }
        }
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nombre:</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Roles:</label>
                <select name="SelRol" id="select" class="form-control">
                    <option value="" disabled selected>Seleccione un Rol</option>
                    @for (int i = 0; i < ViewBag.Roles.Count; i++)
                    {
                        <option value="@ViewBag.Roles[i].Id">@ViewBag.Roles[i].Nombre</option>
                    }

                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-danger" />
            </div>
        </form>
        <div class="align-content-end text-right">
            <a asp-action="MostrarTodosUsus">Volver al Listado</a>
        </div>
    </div>
</div>


