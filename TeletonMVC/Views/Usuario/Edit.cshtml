@model Dominio.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-items-center ">
    <div class="col-md-4 border"  style="background-color: #454d55; padding: 10px">
        <h4 class="text-center text-danger">Usuario: Editar</h4>
        @if (ViewBag.Status != null)
        {

            if (ViewBag.Status == true)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Mensaje
                </div>
            }
            else if (ViewBag.Status == false)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Mensaje
                </div>
            }
        }
        <hr style="border-top: 1px solid white;" />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label text-white">Contraseña:</label>
                <input type="password" asp-for="Contrasenia" class="form-control" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cambiar" class="btn btn-danger" />
            </div>
        </form>
        <div class="align-content-end text-right">
            <a asp-action="MostrarTodosUsus" class="text-danger">Volver al Listado</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

